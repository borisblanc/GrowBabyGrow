<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/layout_border"
    tools:context="com.app.babygrow.AudioActivity">


    <TextView
        android:id="@+id/txtartist"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="11dp"
        android:text="By: Bensound"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnRw"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginBottom="-8dp"
        android:layout_marginLeft="16dp"
        android:text="@string/rewind"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:id="@+id/btnPlay"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginBottom="-8dp"
        android:layout_marginStart="35dp"
        android:text="Play"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnRw" />

    <Button
        android:id="@+id/btnPause"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginBottom="-8dp"
        android:layout_marginStart="35dp"
        android:text="Pause"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnPlay" />


    <Button
        android:id="@+id/btnFF"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginBottom="-8dp"
        android:layout_marginStart="35dp"
        android:text="@string/forward"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnPause" />



    <SeekBar
        android:layout_width="393dp"
        android:layout_height="14dp"
        android:id="@+id/seekBar"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/txtname"
        android:layout_marginLeft="7dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textDuration"
        android:layout_width="123dp"
        android:layout_height="16dp"
        android:layout_above="@+id/seekBar"
        android:text="Duration: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/txtname"
        android:layout_marginLeft="-1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/txtname"
        android:layout_width="122dp"
        android:layout_height="24dp"
        android:text="Sunny"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="16dp" />

    <RadioButton
        android:id="@+id/rdoSelect"
        android:layout_width="33dp"
        android:layout_height="28dp"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/txtartist" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="97dp"
        android:layout_height="27dp"
        android:text="SELECT:"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="-14dp"
        app:layout_constraintTop_toBottomOf="@+id/txtartist"
        app:layout_constraintRight_toLeftOf="@+id/rdoSelect"
        android:layout_marginRight="0dp" />

</android.support.constraint.ConstraintLayout>