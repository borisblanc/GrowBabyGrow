<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintaudiomain"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txtmain"
            android:layout_width="460dp"
            android:layout_height="30dp"
            android:layout_marginStart="85dp"
            android:text="Select Music for your Baby Grow..."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/audiochild1"
            layout="@layout/content_audio_child"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtmain"
            android:layout_marginEnd="8dp" />

        <include
            android:id="@+id/audiochild2"
            layout="@layout/content_audio_child"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/audiochild1"
            android:layout_marginEnd="8dp" />

        <include
            android:id="@+id/audiochild3"
            layout="@layout/content_audio_child"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/audiochild2"
            android:layout_marginEnd="8dp" />

        <include
            android:id="@+id/audiochild4"
            layout="@layout/content_audio_child"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/audiochild3"
            android:layout_marginEnd="8dp"/>

        <include
            android:id="@+id/audiochild5"
            layout="@layout/content_audio_child"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/audiochild4"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btn_hamburger"
            android:layout_width="46dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/hamburger_icon" />




    </android.support.constraint.ConstraintLayout>

</ScrollView>